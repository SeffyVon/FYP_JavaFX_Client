package Networks;

import java.io.File;

import org.json.JSONArray;

import com.mashape.unirest.http.HttpResponse;
import com.mashape.unirest.http.JsonNode;
import com.mashape.unirest.http.Unirest;
import com.mashape.unirest.http.exceptions.UnirestException;

public class UserRequest {  // userLogin and userRegister
	
	static String hostAddrString = "http://127.0.0.1:63342/OnlineCinema_Server/src/";
	public static boolean userLogin(String uname, String hashOfPw){
		try {
			HttpResponse<String> responseString = Unirest.post(hostAddrString+"users/userLogin.php")
			  .field("uname",uname)
			  .field("hashOfPw", hashOfPw)
			  .asString();
			System.out.println(responseString.getBody());

			if(responseString.getBody().toString().contains("OK"))
				return true;
		} catch (UnirestException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return false;
	}
	
	public static boolean userRegister(String uname, String hashOfPw){
		try {
			HttpResponse<String> responseJson = Unirest.post(hostAddrString+"users/userRegister.php")
			  .field("uname",uname)
			  .field("hashofpw", hashOfPw)
			  .asString();
			System.out.println(responseJson.getHeaders());
			System.out.println(responseJson.getBody());
			return true;
		} catch (UnirestException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return false;
	}
	
	
	public static boolean userPicUpload(File picFile){
		try {
			HttpResponse<String> responseJson = Unirest.post(hostAddrString+"/users/fileUpload.php")
			  .field("uploadFile", picFile)
			  .asString();
		
			System.out.println(responseJson.getHeaders());
			System.out.println(responseJson.getBody());
			return true;
		} catch (UnirestException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return false;
	}

	public static String userPicDownload(String uname){
		try {
			HttpResponse<String> responseJson = Unirest.post(hostAddrString+"users/fileDownload.php")
			  .field("uname", uname)
			  .asString();
			//System.out.println(responseJson.getHeaders());
			System.out.println(responseJson.getBody());
			return responseJson.getBody();
		} catch (UnirestException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;
	}
	
	
	public static void main(String[] args) {
		//System.out.println(userLogin("doge","hello"));
