.theme
{
    -fx-background-color: #3e4042;
}

#MovieTape
{
	-fx-background-image:url("../../resources/pic/border-right.gif") repeat;
}

#movieName
{
	-fx-font-size: 20pt;
	-fx-text-fill: #0e5b95;
}

.groupScene, .movieScene
{
	-fx-background-color: black;
}

/*list view */
.list-view
{
	-fx-background-color: black;
	-fx-background-insets:0;
}

.list-cell
{
	-fx-background-color: black;
}

/*label in the cinema pane */
.cinemaPane .label{
	-fx-text-fill: #bec1c4;
	-fx-font-family: 'Arial';
}
.dateLabel
{
	-fx-background-color:black;
	-fx-border-radius: 5;
	-fx-border-color: grey;
}

.cinemaPane .button{
	-fx-text-fill: #f2f6f9;
	-fx-font-size:12pt;
	-fx-border-radius: 5;
	-fx-background-color:grey;
	-fx-border-color: grey;
}

/* for showing the group and the group member */
.groupScrollView
{
	-fx-background-color: black;
}

.theme .scroll-bar:horizontal
{
	-fx-background-color:transparent;
	-fx-opacity:0;
}

.theme .scroll-bar:vertical
{
	-fx-background-color:transparent;
	-fx-opacity:0;
}
/*http://blog.ngopal.com.np/2012/07/11/customize-scrollbar-via-css/*/

/* for the scroll view */
.text-area
{
	-fx-font-size: 12pt;
	-fx-text-fill:#949699;
	-fx-background-color:transparent;
}

.text-area .scroll-pane
{
	-fx-background-color:transparent;
}

.text-area .scroll-pane .viewport{
    -fx-background-color: transparent;
}

.text-area .scroll-pane .content{
    -fx-background-color: transparent;
}

#posterBackGround
{
	-fx-background-color:black; /*to be done */
}

.rightVbox
{
	-fx-text-fill: #f2f6f9;
	-fx-font-size: 12pt;
	-fx-border-radius: 5;
	-fx-background-color:grey;
	-fx-border-color: grey;
}

#leftArrow
{
	-fx-background-image:url("../../resources/pic/left_arrow.png") no-repeat;
	-fx-border-color: black;
	-fx-background-color:black;

}

#rightArrow
{
	-fx-background-image:url("../../resources/pic/right_arrow.png") no-repeat;
	-fx-border-color: black;
	-fx-background-color:black;
}

#volumeButton
{
	-fx-background-color:black;
	-fx-graphic:url("../../resources/pic/speaker2.png") no-repeat;
}

#playButton
{
	-fx-background-color:black;
	-fx-graphic:url("../../resources/pic/play.png") no-repeat;
}

.slider .track
{
	-fx-background-color:#383735;
}

.slider .thumb
{
	-fx-background-color:white;
}


